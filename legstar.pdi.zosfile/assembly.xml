<!--
Assembly descriptor for the full distribution.
-->
<assembly>
    <id></id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <files>
        <!-- Copy plugin ICON -->
        <file>
          <source>src/main/resources/ZOSFIN.png</source>
          <outputDirectory>/</outputDirectory>
        </file>
        <!-- Copy plugin descriptor -->
        <file>
          <source>src/main/resources/plugin.xml</source>
          <outputDirectory>/</outputDirectory>
          <filtered>true</filtered>
        </file>
        <!-- Copy cob2trans configuration file -->
        <file>
          <source>src/main/resources/conf/cob2trans.properties</source>
          <outputDirectory>/conf</outputDirectory>
        </file>
    </files>

    <fileSets>
        <!-- Copy over the jar -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>org.pentaho:*</exclude> 
                <exclude>org.eclipse.swt:*</exclude> 
                <exclude>log4j:*</exclude> 
                <exclude>org.codehaus.jackson:*</exclude> 
            </excludes>
        </dependencySet>
    </dependencySets>
    
</assembly>
